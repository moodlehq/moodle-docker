version: "2"
services:
  webserver:
    extra_hosts:
      - "host.docker.internal:host-gateway"
    environment:
      XDEBUG_MODE: debug,develop
      XDEBUG_CONFIG:
        client_host=host.docker.internal
        start_with_request=yes
        log=./tmp/xdebug.log
        log_level=10
        idekey=VSCODE
        discover_client_host=1
 